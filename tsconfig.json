{
    "compilerOptions": {
        "target": "ES2022",
        "module": "ES2022",
        "moduleResolution": "node",
        "allowJs": true,
        "allowSyntheticDefaultImports": true,
        "strict": true,
        "declaration": true,
        "rootDir": "./src/",
        "outDir": "build",
        "importHelpers": true,
        "paths": {
            "@config/*": ["./src/config/*"]
        }
    },
    "include": ["src/**/*.ts"],
    "exclude": ["node_modules"]
}
